<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.purchase.after.AfterPurchaseActivity">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="jeonghoon"
            android:textColor="@color/grey_5d687a"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/map_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="감성을 느낄 수 있는 힐링 여행"
            android:textColor="@color/grey_313740"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/map_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />
        
        <HorizontalScrollView
            android:id="@+id/sv_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/map_view"
            app:layout_constraintEnd_toEndOf="@id/map_view">

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

