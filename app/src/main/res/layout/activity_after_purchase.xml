<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="co.kr.bemyplan.data.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.purchase.after.AfterPurchaseActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/al_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_home"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_arrow" />

                <TextView
                    android:id="@+id/img_home_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="감성을 느낄 수 있는 힐링 여행"
                    android:textColor="@color/grey_313740"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textSize="18sp"
                    app:text="@{post.title}" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_daily_contents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/al_home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="jeonghoon"
                    android:textColor="@color/grey_5d687a"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textSize="14sp"
                    app:text="@{post.writer}"
                    app:layout_constraintStart_toStartOf="@id/map_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_to_writer_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_icn_arrow_forward"
                    app:layout_constraintStart_toEndOf="@id/tv_writer"
                    app:layout_constraintTop_toTopOf="@id/tv_writer"
                    app:layout_constraintBottom_toBottomOf="@id/tv_writer"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="감성을 느낄 수 있는 힐링 여행"
                    android:textColor="@color/grey_313740"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textSize="20sp"
                    app:text="@{post.title}"
                    app:layout_constraintStart_toStartOf="@id/map_view"
                    app:layout_constraintTop_toBottomOf="@+id/tv_writer" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_day_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:paddingTop="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/map_view"
                    tools:listitem="@layout/item_day_button" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fcv_daily_context"
                    tools:layout="@layout/fragment_daily_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/rv_day_button" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

