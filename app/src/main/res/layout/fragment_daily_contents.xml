<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.purchase.after.DailyContentsFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:elevation="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/iv_blue_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/blue_circle"
            app:layout_constraintBottom_toBottomOf="@+id/tv_place"
            app:layout_constraintEnd_toStartOf="@id/tv_place"
            app:layout_constraintTop_toTopOf="@id/tv_place" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="96dp"
            android:text="산방산"
            android:textColor="@color/grey_313740"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_blue_circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/blue_circle"
            app:layout_constraintBottom_toBottomOf="@+id/tv_place2"
            app:layout_constraintEnd_toStartOf="@id/tv_place2"
            app:layout_constraintTop_toTopOf="@id/tv_place2" />

        <TextView
            android:id="@+id/tv_place2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="96dp"
            android:text="난드르바당"
            android:textColor="@color/grey_313740"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_place" />

        <ImageView
            android:id="@+id/iv_blue_circle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/blue_circle"
            app:layout_constraintBottom_toBottomOf="@+id/tv_place3"
            app:layout_constraintEnd_toStartOf="@id/tv_place3"
            app:layout_constraintTop_toTopOf="@id/tv_place3" />

        <TextView
            android:id="@+id/tv_place3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="96dp"
            android:text="카페 C.hill"
            android:textColor="@color/grey_313740"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_place2"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/v_blue_dotted_line"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/blue_dotted_line_vertical"
            android:layerType="software"
            app:layout_constraintTop_toBottomOf="@id/iv_blue_circle"
            app:layout_constraintBottom_toTopOf="@id/iv_blue_circle3"
            app:layout_constraintStart_toStartOf="@id/iv_blue_circle"
            app:layout_constraintEnd_toEndOf="@id/iv_blue_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_daily_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/daily_contents_list" />


</androidx.constraintlayout.widget.ConstraintLayout>